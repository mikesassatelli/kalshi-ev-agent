# ============================================================
# Kalshi EV Agent — Environment Configuration
# ============================================================
# Copy this file to .env and fill in your values.

# --- Kalshi API ---
KALSHI_API_KEY_ID=your-api-key-id
KALSHI_PRIVATE_KEY_PATH=./keys/kalshi-private.pem
# Or inline PEM:
# KALSHI_PRIVATE_KEY_PEM="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"

# "prod" | "demo"  — ALWAYS start with demo
KALSHI_ENV=demo

# --- Anthropic (for LLM forecaster) ---
ANTHROPIC_API_KEY=sk-ant-...

# --- Agent Config ---
# Minimum edge (model_prob - market_prob) to trigger a trade
MIN_EDGE_THRESHOLD=0.05

# Kelly fraction (0.25 = quarter Kelly, conservative)
KELLY_FRACTION=0.25

# Max dollars risked on a single contract
MAX_POSITION_USD=50

# Max total portfolio exposure in dollars
MAX_PORTFOLIO_EXPOSURE_USD=500

# How often to scan markets (seconds)
SCAN_INTERVAL_SECONDS=300

# Market categories to scan (comma-separated)
# Options: politics, economics, crypto, climate, tech, finance, sports
MARKET_CATEGORIES=politics,economics,crypto

# --- Forecaster ---
# Enable Anthropic web search for real-time data in forecasts.
# Improves accuracy on current-events markets but costs ~$0.01/search + tokens.
# Default: false (uses only model's training data)
ENABLE_WEB_SEARCH=false

# --- Logging ---
LOG_LEVEL=info
